<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.AstronomyDevelopers.photosaying">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".activity.ShowDetailActivity"
            android:label="动态"/>
        <activity android:name=".activity.ChangeUserInfoActivity"
            android:label="修改信息"/>
        <activity android:name=".activity.ShowPhotoActivity"
            android:label=" "/>
        <activity android:name=".activity.CreatePhotoActivity"
            android:label="新建照片"/>
        <activity android:name=".activity.AboutActivity"
            android:label="关于"/>
        <activity android:name=".activity.SettingsActivity"
            android:label="设置" />
    </application>

</manifest>